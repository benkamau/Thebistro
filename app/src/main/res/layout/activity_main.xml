<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <com.synnapps.carouselview.CarouselView
        android:id="@+id/carouselView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:fillColor="#FFFFFFFF"
        app:pageColor="#00000000"
        app:radius="6dp"
        app:slideInterval="3000"
        app:strokeColor="#FF777777"
        app:strokeWidth="1dp"/>



         >
         <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:id="@+id/head"
             android:layout_centerHorizontal="true"
             android:text="Description"
             android:textStyle="bold"
             android:textSize="30sp"
             android:layout_below="@id/carouselView"
             />
         <TextView
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:id="@+id/description"
             android:layout_below="@id/head"
             android:layout_marginTop="10dp"
             android:layout_marginBottom="20dp"
             android:layout_marginLeft="5dp"
             android:text="@string/description"
             />
         <ImageView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:id="@+id/phone"
             android:src="@drawable/call_black_24dp"
             android:layout_margin="16dp"
             android:layout_below="@+id/description"

             />
         <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:text="0705 466 836"
             android:layout_marginTop="16dp"
             android:layout_marginLeft="5dp"
             android:layout_marginBottom="20dp"
             android:id="@+id/phoneNo"
             android:autoLink="phone"
             android:layout_toRightOf="@id/phone"
             android:layout_below="@+id/description"

             />
         <ImageView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:id="@+id/location"
             android:src="@drawable/location_on_black_24dp"
             android:layout_margin="16dp"
             android:layout_below="@id/phone"

             />
         <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:text="Woodvale Grove, Westlands. Nairobi"
             android:layout_marginTop="16dp"
             android:layout_marginLeft="5dp"
             android:layout_marginBottom="20dp"
             android:id="@+id/gps"
             android:layout_toRightOf="@id/location"
             android:layout_below="@id/phoneNo"

             />
         <ImageView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:id="@+id/build"
             android:src="@drawable/location_city_black_24dp"
             android:layout_margin="16dp"
             android:layout_below="@id/location"

             />
         <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:text="Fortis Tower"
             android:layout_marginTop="16dp"
             android:layout_marginLeft="5dp"
             android:layout_marginBottom="20dp"
             android:id="@+id/address"
             android:layout_toRightOf="@id/build"
             android:layout_below="@id/gps"

             />
         <ImageView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:id="@+id/time"
             android:src="@drawable/time_black_24dp"
             android:layout_margin="16dp"
             android:layout_below="@id/build"

             />
         <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:text="11 am - 3 am"
             android:layout_marginTop="16dp"
             android:layout_marginLeft="5dp"
             android:id="@+id/timer"
             android:layout_toRightOf="@id/time"
                android:layout_below="@id/address"
             />

     </RelativeLayout>
    </ScrollView>

